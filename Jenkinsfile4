pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh '''
                    # 1. Create virtual env
                    python3 -m venv my_env

                    # 2. Activate venv
                    . my_env/bin/activate

                    # 3. Upgrade pip
                    pip install --upgrade pip

                    # 4. Install dependencies
                    pip install selenium webdriver-manager

                    # 5. Debug: show where we are and what files exist
                    pwd
                    ls -la

                    # 6. Run the test script in this folder
                    python TestScriptMay092025.py
                '''
            }
        }
    }
}
